{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "c++ g++ build with raylib",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"${workspaceFolder}/src/*.cpp",
				"-fdiagnostics-color=always",
				"-g",
				"-o",
				"${workspaceFolder}/build/${fileWorkspaceFolderBasename}.exe",
				"-IC:\\raylib\\include",
				"-I${workspaceFolder}/include",
				"-LC:\\raylib\\lib",
				"-lraylib",
				"-lopengl32",
				"-lgdi32",
				"-lwinmm"

			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "builds file with raylib using g++"
		},
		{
			"label": "run executable",
      		"type": "shell",
      		"command": "${workspaceFolder}/build/${workspaceFolderBasename}.exe",
      		"presentation": {
        		"echo": true,
        		"reveal": "always",
        		"focus": true,
        		"panel": "new"
			}
		}
	]
}